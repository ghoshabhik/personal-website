<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/jpg" href="/public/img/favicon.ico"/>
    <link rel="stylesheet" href="/public/css/bootstrap.min.css">
    <link rel="stylesheet" href="/public/css/style.css">
    <link rel="stylesheet" href="/public/css/github.css">
    <title>Abhik Ghosh | Projects, Profiles, Technical Articles</title>
</head>
<body>
    <div class="container">
            <header>
                <%- include('./../home/_navbar') %>
            </header>
            <section class="search-section">
                <div class="d-flex justify-content-center mt-5">
                    <p>'<%= articles.length %>' Articles and '<%= projects.length %>' Projects 
                     found matching the search query: <strong class="text-info">'<%= q %>'</strong>
                    </p>
                </div>
                <% if(!resultFlag.articles) { %>
                    <div class="d-flex justify-content-center mt-5">
                        <p>Articles Search failed with an error</p>
                    </div>
                <% } %>
                <% if(resultFlag.articles) { %>
                <% articles.forEach(article => { %>
                    <div class="card mt-3">
                        <div class="card-body mx-lg-5">
                            <div class="row">
                                <div class="col-lg-9"><h4 class="card-title mb-2"><%=  article.title %></h4></div>
                                <div class="col-lg-3">
                                    <a href="/articles/<%=  article.slug %>" class="btn btn-secondary btn-sm">Read This Article</a>
                                </div>
                            </div>
                          <p class="card-text text-secondary  mb-2"><%=  article.description %></p>
                          <!--a href="/articles/<%=  article.slug %>" class="btn btn-secondary btn-sm">Read This Article</a-->
                        </div>
                    </div>
                <% }) %>
                <% } %>
                <hr>    
                <% if(!resultFlag.projects) { %>
                    <div class="d-flex justify-content-center mt-5">
                        <p>Projects Search failed with an error</p>
                    </div>
                <% } %>
                
                <% if(resultFlag.projects) {  %>
                <% projects.forEach(project => { %>
                    <div class="card mt-3">
                        <div class="card-body mx-lg-5">
                            <div class="row">
                                <div class="col-lg-9"><h4 class="card-title mb-2"><%=  project.title %></h4></div>
                                <div class="col-lg-3">
                                    <a href="/projects/<%=  project.slug %>" class="btn btn-secondary btn-sm">Go to this Project</a>
                                </div>
                            </div>
                          <p class="card-text text-secondary  mb-2"><%=  project.description %></p>
                          <!--a href="/project/<%=  project.slug %>" class="btn btn-secondary btn-sm">Go to this Project</a-->
                        </div>
                    </div>
                <% }) %>
                <% } %>
                <!--/div-->
                
            </section> 
            <footer>
                <div class="card-footer text-muted mt-3 ">
                  <%- include('./../home/_footer') %>
                </div>
            </footer>      
            
   </div>
   
    <!-- Bootstrap JavaScript -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js" integrity="sha384-+YQ4JLhjyBLPDQt//I+STsc9iw4uQqACwlvpslubQzn4u2UU2UFM80nGisd026JF" crossorigin="anonymous"></script>
    <!-- local JS -->
    <script src="/public/js/main.js"></script>
</body>
</html>