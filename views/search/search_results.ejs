<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/jpg" href="/public/img/favicon.ico"/>
    <link rel="stylesheet" href="/public/css/bootstrap.min.css">
    <link rel="stylesheet" href="/public/css/style.css">
    <link rel="stylesheet" href="/public/css/github.css">
    <title>Abhik Ghosh | Projects, Profiles, Technical Articles</title>
</head>
<body>
    <div class="position-fixed main-background mh-100 h-100 mw-100 w-100"></div>
    <div class="main position-relative">
        <header>
            <%- include('./../home/_navbar') %>
        </header>
        <div class="container mt-2">
            <section class="section-block border-bottom border-secondary mb-2">
                <div class="d-flex justify-content-start text-primary">
                    <div class="mx-lg-5">
                        <div class="mx-lg-5 my-2 px-3 py-4">
                            <p class="border-solid heading">Search Results</p>
                            <p>'<%= articles.length %>' Articles and '<%= projects.length %>' Projects
                                        found matching the search query: <strong>'<%= q %>'</strong>
                            </p>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <div class="container mt-2">
            <section class="section-block border-bottom border-secondary mb-2">
                <div class="d-flex justify-content-start text-primary">
                    <div class="mx-lg-5 w-100">
                        <div class="mx-lg-5 my-2 px-3 py-4">
                            <p class="border-solid heading">Articles</p>
                            <p>
                                <% if(!resultFlag.articles) { %>
                                    <div class="d-flex justify-content-center mt-5">
                                        <p>Articles Search failed with an error</p>
                                    </div>
                                <% } %>
                                <% if(resultFlag.articles) { %>
                                    <% articles.forEach(article=> { %>
                                        <a href="/articles/<%=  article.slug %>" class="text-decoration-none">
                                            <div>
                                                <p class="text-link-hover">
                                                    <%= article.title %>
                                                </p>
                                                <p class="text-small">
                                                    <%= article.description %>
                                                </p>
                                            </div>
                                        </a>
                                        <hr>
                                    <% }) %>
                                <% } %>
                            </p>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <div class="container mt-2">
            <section class="section-block border-bottom border-secondary mb-2">
                <div class="d-flex justify-content-start text-primary">
                    <div class="mx-lg-5 w-100">
                        <div class="mx-lg-5 my-2 px-3 py-4">
                            <p class="border-solid heading">Projects</p>
                            <p>
                                <% if(!resultFlag.projects) { %>
                                    <div class="d-flex justify-content-center mt-5">
                                        <p>Projects Search failed with an error</p>
                                    </div>
                                <% } %>
                                <% if(resultFlag.projects) { %>
                                    <% projects.forEach(project=>{ %>
                                        <a href="/projects/<%=  project.slug %>" class="text-decoration-none">
                                            <div>
                                                <p class="text-link-hover">
                                                    <%= project.title %>
                                                </p>
                                                <p class="text-small">
                                                    <%= project.description %>
                                                </p>
                                            </div>
                                        </a>
                                        <hr>
                                    <% }) %>
                                <% } %>
                            </p>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <div class="container">
            <footer>
                <%- include('./../home/_footer') %>
            </footer>
        </div>   
   </div>
   
    <!-- Bootstrap JavaScript -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js" integrity="sha384-+YQ4JLhjyBLPDQt//I+STsc9iw4uQqACwlvpslubQzn4u2UU2UFM80nGisd026JF" crossorigin="anonymous"></script>
    <!-- local JS -->
    <script src="/public/js/main.js"></script>
</body>
</html>