<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS  -->
    <link rel="stylesheet" href="/public/css/bootstrap.min.css">
    <link rel="stylesheet" href="/public/css/style.css">
    <title>Abhik Ghosh | Projects, Profiles, Technical Articles</title>
</head>
<body>
    <div class="container">
            <header>
                <%- include('./../home/_navbar') %>
            </header>
            <section class="blog-section">
                <div class="card border-light mb-3 " >
                    <div class="card-body">
                      <h1 class="card-title text-center">Articles</h1>
                      <blockquote class="blockquote">
                        <p class="card-text mb-0 text-center">“Conversation is king. Content is just something to talk about”</p>
                      </blockquote>

                    </div>
                  </div>
                <div class="blog-display">
                    <% if(mode == 'DEV'){ %>
                        <div class="d-flex justify-content-center">
                            <a href="/articles/new" class="btn btn-primary">Create a new article</a>
                        </div>
                    <% } %>
                    
                    <div class="row">
                        <div class="col">
                          
                        </div>
                        <div class="col-10">
                            <div class="blog-list-card">
                            <% articles.forEach(article => { %>
                                <div class="card mt-3">
                                    
                                    <div class="card-body">
                                      <h5 class="card-title m-2"><%=  article.title %></h5>
                                      <div class="text-muted m-2"><%=  article.createdAt.toLocaleDateString() %></div>
                                      <p class="card-text m-2"><%=  article.description %></p>
                                      <a href="/articles/<%=  article.slug %>" class="btn btn-secondary">Read More</a>
                                    </div>
                                </div>
                            <% }) %>
                            </div>
                            
                        </div>
                        <div class="col">
                          
                        </div>
                    </div>
                </div>
            </section>       
            <footer>
                <div class="card-footer text-muted mt-3">
                  <%- include('./../home/_footer') %>
                </div>
              </footer>
    <!-- JQuery-->
    <script
			  src="https://code.jquery.com/jquery-3.5.1.min.js"
			  integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
			  crossorigin="anonymous">
    </script>
    <!-- local JS -->
    <script src="/public/js/main.js"></script>
    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
</body>
</html>