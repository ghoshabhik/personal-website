<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/jpg" href="/public/img/favicon.ico"/>
    <!-- Bootstrap CSS  -->
    <link rel="stylesheet" href="/public/css/bootstrap.min.css">
    <link rel="stylesheet" href="/public/css/style.css">
    <link rel="stylesheet" href="/public/css/github.css">
    <title>Abhik Ghosh | Projects, Profiles, Technical Articles</title>
</head>
<body>
    <div class="position-fixed main-background mh-100 h-100 mw-100 w-100"></div>
    <div class="main position-relative">
      <header>
        <%- include('./../home/_navbar') %>
      </header>
      <div class="container mt-2">
        <section class="section-block mb-2 p-3">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/articles/pagenated?page=1">All Posts</a></li>
            <li class="breadcrumb-item active">
              <%= article.slug %>
            </li>
          </ol>
          <span class="ml-3 text-small text-muted">Last Modified:
            <%= article.createdAt.toString().substring(4, 15) %>
          </span>
        </section>
        <section class="section-block  mb-2">
          <div class="d-flex justify-content-start text-primary">
            <div class="mx-lg-5 w-100">
              <div class="mx-lg-5 my-2 px-3 py-4">
                <div class="px-lg-5">
                  <div class="px-lg-5">
                  <p class="border-solid heading">
                    <%= article.title %>
                  </p>
                  <p>
                    <%- article.showHtml %>
                  </p>
                  <p>
                    <%- include('_post_tags') %>
                  </p>
                  </div>
                </div>
                <div class="d-flex justify-content-center">
                  <% if(mode=='DEV' ) { %>
                    <form action="/articles/<%= article.id%>?_method=DELETE" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                    <a href="/articles/edit/<%= article.id%>" class="btn btn-primary ml-1">Edit</a>
                    <% } %>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
      <% if(mode=='DEV' ) { %>
      <div class="container mt-2">
        <section class="section-block mb-2">
          <div class="d-flex justify-content-center text-primary">
            <div class="mx-lg-5">
              <div class="mx-lg-5 my-2 px-3 py-4">
                <p class="border-solid heading">Comments on the posts</p>
                <p>
                    <%- include('_post_comments') %>
                </p>
              </div>
            </div>
          </div>
        </section>
      </div>
      <% } %>
      <div class="container mt-2">
        <section class="section-block mb-2">
          <div class="d-flex justify-content-center text-primary">
            <div class="mx-lg-5">
              <div class="mx-lg-5 my-2 px-3 py-4">
                <p>
                  <form method="POST" action="/articles/<%= article.slug %>/postcomment?_method=PUT">
                    <%- include('_form_fields_post_comment') %>
                  </form>
                </p>
              </div>
            </div>
          </div>
        </section>
      </div>
           
        <footer>
          <%- include('./../home/_footer') %>
        </footer>
   </div>
   
    <!-- Bootstrap JavaScript -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js" integrity="sha384-+YQ4JLhjyBLPDQt//I+STsc9iw4uQqACwlvpslubQzn4u2UU2UFM80nGisd026JF" crossorigin="anonymous"></script>
    <!-- local JS -->
    <script src="/public/js/main.js"></script>
    <script src="/public/js/highlight.min.js"></script>
    <script>hljs.highlightAll();</script>
    
</body>
</html>